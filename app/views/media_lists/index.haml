.row
  .col
    %nav.breadcrumb.mb-0.u-bgWhite
      .container
        %a.breadcrumb-item{ href: dashboard_path }
          Dashboard
        %span.breadcrumb-item.active
          Lists
.u-bgGrey.u-fullHeight
  .container
    .row.py-4
      .col
        %table.table.is-fullwidth
          %thead
            %tr
              %th Name
              %th{ colspan: 3 } Actions
          %tbody
            - @media_lists.each do |list|
              %tr
                %td= list.name
                %td= link_to 'View', media_list_path(list)
                %td= link_to 'Edit', edit_media_list_path(list)
                %td= link_to 'Delete', media_list_path(list)
