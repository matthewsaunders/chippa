#flash-messages
  - if flash[:notice]
    .alert.alert-success.alert-dismissible.fade.show
      = notice
      %button{ type: "button", class: "close", data: { dismiss: "alert" } }
        %span &times;

  - if flash[:warning]
    .alert.alert-warning.alert-dismissible.fade.show
      = alert
      %button{ type: "button", class: "close", data: { dismiss: "alert" } }
        %span &times;
